<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.home.HomeFragment">

    <ImageView
        android:id="@+id/nothingToShow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/main_page"
        android:alpha="0.7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:visibility="gone"
        android:layout_margin="16dp"
        android:weightSum="3"
        android:id="@+id/pinnedLayout"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_weight="1.7"
            android:id="@+id/pinnedNote1"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:background="@drawable/pinned_cat_bg"
            android:padding="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/pinnedNote1Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/SemiBoldFont"
                android:text="Reading"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:paddingBottom="4dp"
                android:layout_marginTop="10dp"
                android:id="@+id/pinnedNote1Desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/MediumFont"
                android:textColor="@color/grey"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pinnedNote1Title" />


            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/pin1"
                app:layout_constraintTop_toBottomOf="@id/pinnedNote1Desc"
                app:layout_constraintStart_toStartOf="@id/pinnedNote1Desc"
                android:src="@drawable/unpin"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <TextView
                app:layout_constraintTop_toTopOf="@id/pin1"
                app:layout_constraintStart_toEndOf="@id/pin1"
                android:id="@+id/pin1Title"
                android:text="Pinned"
                android:textAppearance="@style/MediumFont"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_weight="1.3"
            android:id="@+id/pinnedNote2"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:background="@drawable/pinned_cat_bg"
            android:padding="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <TextView
                android:id="@+id/pinnedNote2Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/SemiBoldFont"
                android:text="Reading"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/pinnedNote2Desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAppearance="@style/MediumFont"
                android:textColor="@color/grey"
                android:text="Some description Some description"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pinnedNote2Title" />

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/pin2"
                app:layout_constraintTop_toBottomOf="@id/pinnedNote2Desc"
                app:layout_constraintStart_toStartOf="@id/pinnedNote2Desc"
                android:src="@drawable/unpin"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView
                app:layout_constraintTop_toTopOf="@id/pin2"
                app:layout_constraintStart_toEndOf="@id/pin2"
                android:id="@+id/pin2Title"
                android:text="Pinned"
                android:textAppearance="@style/MediumFont"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="16dp"
        android:id="@+id/noteRV"
        tools:listitem="@layout/note_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pinnedLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addNoteBtn"
        android:src="@drawable/ic_baseline_create_24"
        app:tint="@color/white"
        app:maxImageSize="30dp"
        android:backgroundTint="@color/primaryColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>