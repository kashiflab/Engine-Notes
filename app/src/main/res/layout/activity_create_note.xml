<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CreateNoteActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center|start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backBtn"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"/>

        <ImageView
            android:id="@+id/hint"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="5dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@+id/saveNote"
            android:src="@drawable/hint" />

        <ImageView
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/hint"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp"
            android:id="@+id/saveNote"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:tint="@android:color/holo_green_light"
            android:src="@drawable/save" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="@id/categoryTitle"
        app:layout_constraintBottom_toBottomOf="@id/categoryTitle"
        app:layout_constraintStart_toStartOf="@id/view"
        android:layout_marginEnd="10dp"
        android:id="@+id/categoryIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/work_notes" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toEndOf="@id/categoryIcon"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="5dp"
        android:id="@+id/categoryTitle"
        android:text="Work Notes"
        android:textAppearance="@style/RegularFont"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:background="@android:color/transparent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <EditText
        app:layout_constraintTop_toBottomOf="@id/categoryTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        android:id="@+id/noteTitle"
        android:hint="Title here"
        android:textAppearance="@style/BoldFont"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:inputType="textCapWords"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginStart="10dp"
        android:id="@+id/view"
        app:layout_constraintTop_toBottomOf="@id/labelsLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/category_background"
        android:backgroundTint="@color/primaryColor"
        android:layout_width="5dp"
        android:layout_height="70dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/labelsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/noteTitle"
        app:layout_constraintStart_toStartOf="@id/view"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:gravity="center|start"
            android:layout_weight="1"
            android:padding="5dp"
            android:id="@+id/labelsTv"
            android:layout_width="0dp"
            android:text="Tag1\t\t|\t\tTag2"
            android:textAppearance="@style/MediumFont"
            android:textColor="@color/grey"
            android:textSize="12sp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_gravity="end"
            android:gravity="end|center"
            android:layout_marginEnd="20dp"
            android:id="@+id/addLabels"
            android:background="@android:color/transparent"
            android:textSize="14sp"
            android:padding="5dp"
            android:textAppearance="@style/MediumFont"
            android:text="Add label"
            android:textAllCaps="false"
            android:textColor="@color/accentColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <EditText
        app:layout_constraintTop_toBottomOf="@id/labelsLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/view"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:id="@+id/noteDesc"
        android:hint="Description here"
        android:gravity="start"
        android:textAppearance="@style/MediumFont"
        android:textSize="14sp"
        android:inputType="textCapSentences|textMultiLine"
        android:background="@android:color/transparent"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>